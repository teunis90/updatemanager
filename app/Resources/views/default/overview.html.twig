{% extends 'base.html.twig' %}

{% block body %}

<div class="panel panel-default">
    <div class="panel-heading" style="height: 50px;">
        <div class="pull-left"><h4>Overview</h4></div>
    </div>
 <table class="table table-striped table-condensed">
 	<thead>
 		<tr>
 			<th>#</th>
 			<th>Hostname</th>
 			<th>Installed packages</th>
 			<th>Available updates</th>
 		</tr>
 	</thead>
 	<tbody>
    {% for host in overviewList %}
 		<tr>
 			<td>{{host.id}}</td>
 			<td>{{host.hostname}}</td>
 			<td>{{host.installedpackages}}</td>
 			<td>{{host.availableupdates}}</td>
 		</tr>
    {% endfor %}
 	</tbody>
 </table>
 </div>
</div>
    
{% endblock %}
