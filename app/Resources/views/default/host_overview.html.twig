{% extends 'base.html.twig' %}

{% block body %}

<div class="panel panel-default">
    <div class="panel-heading" style="height: 50px;">
        <div class="pull-left"><h4>Overview</h4></div>
    </div>
 <table class="table table-striped table-condensed">
 	<thead>
 		<tr>
 			<th>#</th>
 			<th>Packagename</th>
 			<th>Installed version</th>
 			<th>Available update</th>
 		</tr>
 	</thead>
 	<tbody>
    {% for host in overviewList %}
 		<tr>
 			<td>{{ loop.index }}</td>
 			<td>{{host.name}}</td>
 			<td>{{host.version}}</td>
 			<td>{{host.availableupdate}}</td>
 		</tr>
    {% endfor %}
 	</tbody>
 </table>
 </div>
</div>
 
{% endblock %}
