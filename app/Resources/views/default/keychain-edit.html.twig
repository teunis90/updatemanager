{% extends 'base.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Edit key</h4>
  </div>
  <div class="panel-body">
	<div class="container-fluid">
		<div class="row">
	  
	      {{ form_start(form) }}
	        <div class="form-group">
	          <label>Id</label>
			  <div>{{keypair.id}}</div>
	        </div>
	        <div class="form-group">
	          {{ form_row(form.sshprivatekeyfilepath, {'attr': {'class': 'form-control', 'readonly': 'true' }}) }}
	        </div>
	        <div class="form-group">
	          {{ form_row(form.sshpublickeyfilepath, {'attr': {'class': 'form-control', 'readonly': 'true' }}) }}
	        </div>
	        <div class="form-group">
	          {{ form_row(form.comment, {'attr': {'class': 'form-control'}}) }}
	        </div>
	        <button type="submit" class="btn btn-primary">Save</button>
	        <a href="{{ path('keychain') }}"><button type="button" class="btn btn-danger">Return to keychain overview</button></a>
	      {{ form_end(form) }}
	      
		</div>
	</div>
  </div>
</div>

{% endblock %}
