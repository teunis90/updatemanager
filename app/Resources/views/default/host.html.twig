{% extends 'base.html.twig' %}

{% block body %}

<div class="panel panel-default">
    <div class="panel-heading" style="height: 50px;">
        <div class="pull-left"><h4>Host overview</h4></div>
        <div class="btn-group pull-right">
            <a href="{{ path('hostNew')  }}" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        </div>
    </div>
 <table class="table table-striped table-condensed">
 	<thead>
 		<tr>
 			<th>#</th>
 			<th>Hostname</th>
 			<th>Sshuser</th>
 			<th>&nbsp;</th>
 		</tr>
 	</thead>
 	<tbody>
    {% for host in hostList %}
 		<tr>
 			<td>{{host.id}}</td>
 			<td>{{host.hostname}}</td>
 			<td>{{host.sshuser}}</td>
 			<td>
 			    <a href="{{ path('hostDelete', {'id': host.id})  }}"><span class="glyphicon glyphicon-remove black hoverred" aria-hidden="true"></span></a>&nbsp;
 			    <a href="{{ path('hostEdit', {'id': host.id})  }}"><span class="glyphicon glyphicon glyphicon-pencil black hoverblue" aria-hidden="true"></span></a>
 			</td>
 		</tr>
    {% endfor %}
 	</tbody>
 </table>
 </div>
</div>
    
{% endblock %}
